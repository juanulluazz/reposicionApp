      <img  src="../img/iconoEliminar.svg" alt="" height="24px" >
    </button>
      </div>

    <!-- Contenedor del cuerpo (Nombre especifico del producto) -->
    <div class="container fila-producto">
      <!-- Nombre especifico del producto -->
      <p class="text-center nombre-producto mb-1">Multi-Accion 3-1</p>
      <!-- Detalles de los productos y sus cantidades -->
      <p>Blanco Satinado 4L <span >4</span></p>
      <p>Blanco Mate 4L <span >2</span></p>
      <p>Azul Traful 1/2L <span >8</span></p>
      <p>Tabaco 1L <span >12</span></p>
    </div>
    <!-- Fin del contenedor del articulo -->
  </div>


  
  <%- include ('partials/formulario.ejs') %>
  
</div>


<!-- Button trigger modal -->
<button type="button" class="btn d-flex  my-1 align-items-center  btn-reponer" data-bs-toggle="modal"
  data-bs-target="#exampleModal">
  AGREGAR ARTICULO <span class="ms-2">+</span>
</button>

    <div class="container footer">

    </div>



