      <p class="m-auto ">- PRODUCTOS A REPONER -</p>
      <a class="m-auto" href="/"><img src="../img/siguienteIcon.svg" height="32px" alt="back" ></a>
  </div>
   
 </div>

<!-- Contenido principal -->

<div class="contenedor-marcas mt-1 ">


  <div class=" productos-contenedor">

    <div class="marca-contenedor px-2 py-1 ">
      <img src="../img/icoNotaOff.svg"  alt="" >
      <h3>Marca(1)</h3>
    </div>

    
    <div class="fila-producto container">

      <p class="text-center nombre-producto">NOMBRE(2)</p>

        <p >DETALLE(3) VOLUMEN(4) <span >C(5)</span></p>

    </div>
    
  </div>
  
  <!-- Contenedor del articulo -->
  <div class="  productos-contenedor">

    <!-- Contenedor del encabezado (nombre de la marca) -->
    <div class=" marca-contenedor px-2 py-1">
  <!-- Parte 1 -->
      <div class="d-flex flex-grow-1  align-items-center">
      <img src="../img/icoNotaOff.svg"  alt="" >
      <h3>Casablanca</h3>
    </div>
    <!-- Parte 2 -->
  
      <button type="button" class=" d-flex  my-1 me-2 align-items-center  btn-marca" data-bs-toggle="modal" data-bs-target="#exampleModal">
             +Productos
      </button>
